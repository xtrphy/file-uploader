<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/footer.css">
    <link rel="stylesheet" href="/index.css">
    <title>Vaultix</title>
</head>

<body>
    <div class="window">
        <%- include ('./partials/header') %>
            <main>
                <% if (isAuthenticated) { %>
                    <% if (files.length===0) { %>
                        <h1 class="upload-file-title">
                            Upload your first file!
                        </h1>
                        <% } else { %>
                            <div class="file-list">
                                <% files.forEach(file=> { %>
                                    <p class="file">
                                        <%= file.name %>
                                    </p>
                                    <% }); %>
                            </div>
                            <% } %>

                                <div class="modal" id="folderModal">
                                    <div class="modal-content">
                                        <button class="close-btn">&times;</button>
                                        <form action="/create-folder" method="POST">
                                            <input type="text" name="name" placeholder="Folder name" required />
                                            <button class="create-folder-btn" type="submit">Create</button>
                                        </form>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="get-started">
                                        <h1 class="title">The most <span>secure</span> data keeper</h1>
                                        <p class="subtitle">With Vaultix, users can securely upload, view and manage
                                            their files in an
                                            intuitive interface.</p>
                                        <a href="/login">Get started for free &rarr;</a>
                                    </div>
                                    <% } %>
            </main>

            <%- include ('./partials/footer') %>
    </div>

    <script src="/js/index.js"></script>
    <script src="https://kit.fontawesome.com/3130acdd01.js" crossorigin="anonymous"></script>
</body>

</html>